                              ColumnDefinitions="Auto,*,Auto" 
                              ColumnSpacing="12" 
                              Margin="0,8,0,0">

                            <Border Grid.Column="0" 
                                    BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#444444}" 
                                    StrokeShape="RoundRectangle 8" 
                                    Padding="10,5">
