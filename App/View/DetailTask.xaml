                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                            Padding="16"
                            Shadow="{Shadow Brush={AppThemeBinding Light=Black, Dark=White}, Opacity=0.1, Radius=10, Offset='0,2'}">

