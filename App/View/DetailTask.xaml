                                                        HeightRequest="30"
                                                        WidthRequest="30"
                                                        CornerRadius="15"
                                                        Padding="0"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DetailTaskViewModel}}, Path=RemoveSubTaskCommand}"
