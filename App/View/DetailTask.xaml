                                        BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#333333}"
                                        Padding="8,0">

                                    <Picker Title="SÃ©lectionner une tÃ¢che"
                                            ItemsSource="{Binding TachesDisponibles}"
